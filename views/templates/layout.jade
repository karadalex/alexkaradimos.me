include ../mixins/main.jade

doctype html
html(lang='en')
  head
    title Alex Karadimos - #{title}
    
    meta(charset='UTF-8')
    meta(name='description', content='My Personal Website, Alex Karadimos')
    meta(name='keywords', content='Alex Karadimos, Alexios, Personal Website, Portfolio, Curriculum Vitae, CV, About, Press, Blog, Contact')
    meta(name='author', content='Alex Karadimos')
    meta(name='viewport', content='initial-scale=1')
    
    block css
      link(rel='stylesheet', href='/bower_components/font-awesome/css/font-awesome.min.css')
      link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
      link(rel='stylesheet', href='/styles/main.css')
    
    block js
      script(src='/scripts/main.js')
      
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')

  body
    include header
  
    block content
    
    include footer
    
    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/jquery-ui/jquery-ui.min.js')
    script(src='/scripts/jquery-scripts.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
